
<div class="alert-danger">
    {{error}}
</div>
<h3>{{viewTitle}}</h3>
<form action="/employee" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{employee._id}}">
<div class="form-group">
    <label>Full Name</label>
    <input type="text" name="fullname" value="{{employee.fullname}}" placeholder="Full Name" class="form-control">
    <div class="text-danger">
        {{employee.fullNameError}}
    </div>
</div>
<div class="form-group">
    <label>Email</label>
    <input type="text" name="email"  value="{{employee.email}}" placeholder="Email" class="form-control">
    <div class="text-danger">
        {{employee.emailError}}
    </div>
</div>
<div class="form-row">
    <div class="form-group md-6">
        <label>Mobile</label>
        <input type="text" name="mobile" value="{{employee.mobile}}" placeholder="Mobile" class="form-control">    
    </div>
    <div class="form-group md-6">
        <label>City</label>
        <input type="text" name="city" value="{{employee.city}}" placeholder="City" class="form-control">    
    </div>

</div>
<div class="form-group">
    <button type="submit" class="btn btn-info">
        <i class="fa fa-database"></i>Submit
    </button>
    <a href="/employee/list" class="btn btn-danger">
        <i class="fa fa-list-alt"></i>
        View All
    </a>
</div>
</form>